<%= form_for(@aauto) do |f| %>
  <% if @aauto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aauto.errors.count, "error") %> - ошибки  делают сохранение невозможным:</h2>

      <ul>
      <% @aauto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "ФИО водителя" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Описание авто" %><br />
    <%= f.text_field :autodesc %>
  </div>
  <div class="field">
    <%= f.label "Номер авто" %><br />
    <%= f.text_field :autonumber %>
  </div>
  <div class="field">
    <%= f.label "Контактный тел. водителя" %><br />
    <%= f.text_field :contact %>
  </div>
  <div class="actions">
    <%= f.submit 'Создать'%>
  </div>
<% end %>
