<% @aorders.each do |aorder| %>
  <tr>
    <td><%= aorder.id %></td>
    <td><%= aorder.onname %></td>
    <td><%= aorder.department.name if aorder.department %></td>
    <td><%= aorder.contact %></td>
    <td><%= aorder.adestination %></td>
    <td><%= aorder.ftime.strftime("%H:%M") %></td>
    <td><%= aorder.totime.strftime("%H:%M") %></td>
    <td><%= link_to aorder.aauto.name_autodesc, aorder.aauto if aorder.aauto %></td>
    <td><%= aorder.comment %></td>

    <%= td_odometer(aorder.odobegin, aorder.odoend, aorder.outofcity) do %>
        <%= aorder.odobegin %>
    <%end%>
    
    <%= td_odometer(aorder.odobegin, aorder.odoend, aorder.outofcity) do %>
        <%= aorder.odoend %>
    <%end%>


    <td <%= 'class= baddate' if !aorder.odate.isclosed %> ><%= aorder.odate.thedate %></td>
    <td><%= aorder.user.name %></td>


  </tr>
<% end %>